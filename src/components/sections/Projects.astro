---
import Sections from "../Sections.astro";

import { projects } from "@cv";
---

<Sections title="Proyectos">
  <ul class="grid grid-cols-[repeat(auto-fit,minmax(200px,1fr))] gap-4">
    {
      projects.map(({ url, description, highlights, name, isActive }) => {
        return (
          <li>
            <article class="rounded-md border border-[#f2f2f2] gap-4 flex flex-col p-4 h-full">
              <header class="flex-1">
                <h3 class="text-lg font-bold">
                  <a
                    href={url}
                    title={`Ver el proyecto ${name}`}
                    target="_blank"
                    class="hover:underline"
                  >
                    {name}
                  </a>
                  {isActive && <span class="text-green-600">&bull;</span>}
                </h3>
                <p class="text-text text-sm">{description}</p>
              </header>
              <footer class="flex flex-wrap gap-2 text-sm">
                {highlights.map((highlight) => (
                  <span class="rounded-md bg-[#eee] text-[#444] text-xs font-medium px-2 py-1">
                    {highlight}
                  </span>
                ))}
              </footer>
            </article>
          </li>
        );
      })
    }.
  </ul>
</Sections>
